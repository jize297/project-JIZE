<?xml version="1.0" encoding="UTF-8"?>
<!-- 激进优化的车辆类型定义 -->
<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">
    
    <!-- HDC保持相对保守，作为对比基准 -->
    <vType id="HDC"  color ="gray" vClass="passenger" carFollowModel="Krauss" 
        speedDev="0.1" accel="2.0" decel="4.5" sigma="0.5"
        lcStrategic="0.3" lcCooperative="0.0" lcSpeedGain="0.3"
        probability="0">
        <param key="has.ssm.device" value="true"/>
        <param key="device.ssm.file" value="ssm_HDC.xml"/>
        <param key="device.ssm.measures" value="TTC SGAP TGAP"/>
        <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
        <param key="device.ssm.range" value="5.0"/>
        <param key="device.ssm.extratime" value="0.0"/>
    </vType>    
  
    <!-- 高性能CAV2：显著优于HDC -->
    <vType id="CAV2" vClass="passenger" speedDev="0.02"
        carFollowModel="CACC"
        minGap="1.0" tau="0.5" sigma="0.05"
        accel="2.5" decel="6.0"
        lcStrategic="1.0" lcCooperative="0.8"
        lcSpeedGain="1.2" lcPushy="0.5"
        probability="0.6">
        <param key="has.ssm.device" value="true"/>
        <param key="device.ssm.file" value="ssm_CAV2.xml"/>
        <param key="device.ssm.measures" value="TTC SGAP TGAP"/>
        <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
        <param key="device.ssm.range" value="5.0"/>
        <param key="device.ssm.extratime" value="0.0"/>
    </vType>

    <!-- 超高性能CAV4：编队旗舰 -->
    <vType id="CAV4" vClass="passenger" speedDev="0.01"
        carFollowModel="CACC"
        minGap="0.8" tau="0.4" sigma="0.02"
        accel="3.0" decel="7.0"
        lcStrategic="1.0" lcCooperative="1.0"
        lcSpeedGain="1.5" lcPushy="0.3"
        probability="0.4">
        <param key="has.ssm.device" value="true"/>
        <param key="device.ssm.file" value="ssm_CAV4.xml"/>
        <param key="device.ssm.measures" value="TTC SGAP TGAP"/>
        <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
        <param key="device.ssm.range" value="5.0"/>
        <param key="device.ssm.extratime" value="0.0"/>
    </vType>

    <!-- 激进优化的编队角色车辆 -->
    <!-- 编队领车：高速度，强换道能力 -->
    <vType id="t_leader2" color="yellow"
        carFollowModel="CACC" speedDev="0.02"
        minGap="1.0" tau="0.5" sigma="0.05"
        accel="2.5" decel="6.0"
        lcStrategic="1.0" lcCooperative="0.8"
        lcSpeedGain="1.2" lcPushy="0.5">
        <param key="has.ssm.device" value="true"/>
        <param key="device.ssm.file" value="ssm_leader2.xml"/>
        <param key="device.ssm.measures" value="TTC SGAP TGAP"/>
        <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
        <param key="device.ssm.range" value="5.0"/>
        <param key="device.ssm.extratime" value="0.0"/>
    </vType>

    <vType id="t_leader4" color="orange"
        carFollowModel="CACC" speedDev="0.01"
        minGap="0.8" tau="0.4" sigma="0.02"
        accel="3.0" decel="7.0"
        lcStrategic="1.0" lcCooperative="1.0"
        lcSpeedGain="1.5" lcPushy="0.3">
        <param key="has.ssm.device" value="true"/>
        <param key="device.ssm.file" value="ssm_leader4.xml"/>
        <param key="device.ssm.measures" value="TTC SGAP TGAP"/>
        <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
        <param key="device.ssm.range" value="5.0"/>
        <param key="device.ssm.extratime" value="0.0"/>
    </vType>

    <!-- 编队跟随车：超紧密跟随，高效协调 -->
    <vType id="t_follower2" color="green" 
        carFollowModel="CACC" speedDev="0.02"
        minGap="0.6" tau="0.3" sigma="0.05"
        accel="2.8" decel="6.5"
        lcStrategic="0.5" lcCooperative="1.0"
        lcSpeedGain="0.5"/>
        
    <vType id="t_follower4" color="white" 
        carFollowModel="CACC" speedDev="0.01"
        minGap="0.5" tau="0.25" sigma="0.02"
        accel="3.2" decel="7.5"
        lcStrategic="0.5" lcCooperative="1.0"
        lcSpeedGain="0.5"/>
        
    <!-- 编队追赶车：超强机动性 -->
    <vType id="t_catchup2" color="red" 
        carFollowModel="CACC" speedDev="0.02"
        minGap="0.8" tau="0.4" sigma="0.05"
        accel="3.5" decel="6.0"
        lcStrategic="1.0" lcCooperative="0.5"
        lcSpeedGain="1.5" lcPushy="0.8"/>
        
    <vType id="t_catchup4" color="magenta" 
        carFollowModel="CACC" speedDev="0.01"
        minGap="0.6" tau="0.3" sigma="0.02"
        accel="4.0" decel="7.0"
        lcStrategic="1.0" lcCooperative="0.5"
        lcSpeedGain="1.8" lcPushy="0.6"/>
        
    <vType id="t_catchupFollower2" color="blue" 
        carFollowModel="CACC" speedDev="0.02"
        minGap="0.6" tau="0.35" sigma="0.05"
        accel="3.0" decel="6.2"
        lcStrategic="0.7" lcCooperative="0.8"
        lcSpeedGain="0.8"/>
        
    <vType id="t_catchupFollower4" color="cyan" 
        carFollowModel="CACC" speedDev="0.01"
        minGap="0.5" tau="0.3" sigma="0.02"
        accel="3.5" decel="7.2"
        lcStrategic="0.8" lcCooperative="1.0"
        lcSpeedGain="1.0"/>

    <!-- 分布定义 -->
    <vTypeDistribution id="PKW_PLATOON" vTypes="HDC CAV2 CAV4"/>
</additional>