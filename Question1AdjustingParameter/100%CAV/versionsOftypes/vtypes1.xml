<?xml version="1.0" encoding="UTF-8"?>

<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">
    
	<vType id="HDC" color ="gray" vClass="passenger" carFollowModel="Krauss" lcStrategic="0.5"
     probability="0" >
    <param key="has.ssm.device" value="true"/>

    <!-- 2. 指定该类型车辆的输出文件（可按需改名） -->
    <param key="device.ssm.file" value="ssm_HDC.xml"/>
    <param key="device.ssm.measures"  value="TTC SGAP TGAP"/>
    <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
    <param key="device.ssm.range"     value="5.0"/>
    <param key="device.ssm.extratime" value="0.0"/>
    </vType>    
  
    <vType id="CAV2" vClass="passenger" speedDev="0.05"
    carFollowModel="CACC"
    minGap="1.5" tau="0.8" sigma="0.2"
    accel="1.0" decel="4.5"
    lcStrategic="0.5" lcCooperative="0.0"
    lcSpeedGain="0.5"
    probability="0.6">
     <!-- 1. 启用 SSM 设备 -->
    <param key="has.ssm.device" value="true"/>

    <!-- 2. 指定该类型车辆的输出文件（可按需改名） -->
    <param key="device.ssm.file" value="ssm_CAV2.xml"/>

    <param key="device.ssm.measures"  value="TTC SGAP TGAP"/>
    <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
    <param key="device.ssm.range"     value="5.0"/>
    <param key="device.ssm.extratime" value="0.0"/>
    </vType>

     <vType id="CAV4" vClass="passenger" speedDev="0.05"
    carFollowModel="CACC"
    minGap="1.0" tau="0.6" sigma="0.05"
    accel="1.8" decel="3.0"
    lcStrategic="1.0" lcCooperative="1.0"
    lcSpeedGain="1.0" lcPushy="0.2"
    probability="0.4"><!-- 1. 启用 SSM 设备 -->
    <param key="has.ssm.device" value="true"/>

    <!-- 2. 指定该类型车辆的输出文件（可按需改名） -->
    <param key="device.ssm.file" value="ssm_CAV4.xml"/>

    <param key="device.ssm.measures"  value="TTC SGAP TGAP"/>
    <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
    <param key="device.ssm.range"     value="5.0"/>
    <param key="device.ssm.extratime" value="0.0"/>

    <!-- 8. （可选）只在指定路段/交叉口检测冲突 -->
    <!-- <param key="device.ssm.filter-edges.input-file" value="edges.txt"/> -->

    <!-- 9. （可选）排除某些冲突类型 -->
    <!-- <param key="device.ssm.exclude-conflict-types" value="ego"/> -->
    </vType>


    <!-- CAV2 系列（稍保守） -->
    <vType id="t_leader2" color="yellow"
        carFollowModel="CACC" speedDev="0.05"
    minGap="1.5" tau="0.8" sigma="0.2"
    accel="1.0" decel="4.5"
    lcStrategic="0.5" lcCooperative="0.0"
    lcSpeedGain="0.5"
        >
    <param key="has.ssm.device"       value="true"/>
    <param key="device.ssm.file"      value="ssm_leader2.xml"/>
    <param key="device.ssm.measures"  value="TTC SGAP TGAP"/>
    <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
    <param key="device.ssm.range"     value="5.0"/>
    <param key="device.ssm.extratime" value="0.0"/>
    </vType>


    <!-- CAV4 系列（更激进，更高效） -->
    <vType id="t_leader4" color="orange"
        speedDev="0.05"
    carFollowModel="CACC"
    minGap="1.0" tau="0.6" sigma="0.05"
    accel="1.8" decel="3.0"
    lcStrategic="1.0" lcCooperative="1.0"
    lcSpeedGain="1.0" lcPushy="0.2"
        >
    <param key="has.ssm.device"       value="true"/>
    <param key="device.ssm.file"      value="ssm_leader4.xml"/>
    <param key="device.ssm.measures"  value="TTC SGAP TGAP"/>
    <param key="device.ssm.thresholds" value="0.5 0.5 0.5"/>
    <param key="device.ssm.range"     value="5.0"/>
    <param key="device.ssm.extratime" value="0.0"/>
    </vType>

    <vType id="t_follower2" color="green" carFollowModel="CACC" minGap="0.5" tau="0.5"/>
    <vType id="t_follower4" color="white" carFollowModel="CACC" minGap="0.5" tau="0.5"/>
    <vType id="t_catchup2" color="red" carFollowModel="CACC" minGap="0.5" tau="0.5"/>
    <vType id="t_catchup4" color="magenta" carFollowModel="CACC" minGap="0.5" tau="0.5"/>
    <vType id="t_catchupFollower2" color="blue" carFollowModel="CACC" minGap="0.5" tau="0.5"/>
    <vType id="t_catchupFollower4" color="cyan" carFollowModel="CACC" minGap="0.5" tau="0.5"/>

    

    <!-- 分布定义 -->
    <!-- 分布1：用于参与 platooning 的车辆（自动驾驶车辆：CAV2 和 CAV4） -->
    <vTypeDistribution id="PKW_PLATOON" vTypes="HDC CAV2 CAV4"/>
    <!-- 分布2：用于非 platooning HDC -->
    <!-- <vTypeDistribution id="PKW_NONPLATOON" vTypes="HDC"/>   -->
	
</additional>