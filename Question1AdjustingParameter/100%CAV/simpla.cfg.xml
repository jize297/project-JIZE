<configuration>
    <vTypeMap original="CAV2"
            leader="t_leader2"
            follower="t_follower2"
            catchup="t_catchup2"
            catchupFollower="t_catchupFollower2" />

    <vTypeMap original="CAV4"
            leader="t_leader4"
            follower="t_follower4"
            catchup="t_catchup4"
            catchupFollower="t_catchupFollower4" />
    
    <vehicleSelectors></vehicleSelectors> 
    <verbosity value="4" />
    <controlRate value="1" />
    
    <!-- 安全优化编队参数 -->
    <maxPlatoonGap value="25" />  <!-- 增大编队间距，确保安全 -->
    <catchupDist value="120" />   <!-- 增加追赶距离，避免急剧变化 -->
    <useHeadway value="true" />   <!-- 启用车头时距控制 -->
    
    <switchImpatienceFactor value="-1" />
    <platoonSplitTime value="4" />  <!-- 增加分裂时间，提高稳定性 -->
    
    <!-- 保守的换道模式 -->
    <lcMode original="594" leader="594" follower="514" catchupFollower="514" />
    
    <!-- 适度提高速度因子，但更保守 -->
    <speedFactor original="-1" leader="1.08" follower="1.25" catchup="1.15"/>
    
    <!-- 减少编队最大车辆数，提高稳定性 -->
    <maxVehicles value="4"/>
</configuration>