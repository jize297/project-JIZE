<configuration>
    <vTypeMap original="CAV2"
            leader="t_leader2"
            follower="t_follower2"
            catchup="t_catchup2"
            catchupFollower="t_catchupFollower2" />

    <vTypeMap original="CAV4"
            leader="t_leader4"
            follower="t_follower4"
            catchup="t_catchup4"
            catchupFollower="t_catchupFollower4" />
    
    <vehicleSelectors></vehicleSelectors> 
    <verbosity value="4" />
    <controlRate value="1" />
    
    <!-- 激进编队参数：追求最大速度效益 -->
    <maxPlatoonGap value="15" />   <!-- 紧密编队间距 -->
    <catchupDist value="150" />    <!-- 大范围编队搜索 -->
    <useHeadway value="true" />    <!-- 精确车头时距控制 -->
    
    <switchImpatienceFactor value="0.5" />  <!-- 启用换道不耐烦因子 -->
    <platoonSplitTime value="1" />          <!-- 快速分裂，高灵活性 -->
    
    <!-- 激进换道模式：最大化编队机动性 -->
    <lcMode original="594" leader="1621" follower="1621" catchupFollower="1621" />
    
    <!-- 关键：显著提高编队速度因子 -->
    <speedFactor original="0.9" leader="1.25" follower="1.6" catchup="1.4"/>
    
    <!-- 大编队：最大化协同效应 -->
    <maxVehicles value="8"/>
</configuration>